// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String    @id @unique
  username     String
  auth_session Session[]
  key          Key[]
  api          Api[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Api {
  id          String   @id @unique @default(uuid())
  name        String
  method      String
  path        String
  description String
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
  schemas     Schema[]

  @@index([userId])
}

model Schema {
  id       String  @id @unique @default(uuid())
  key      String
  type     String
  min      Int?
  max      Int?
  required Boolean @default(false)
  usage    String
  Api      Api?    @relation(fields: [apiId], references: [id])

  apiId String?

  @@index([apiId])
}
